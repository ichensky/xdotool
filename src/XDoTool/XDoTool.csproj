<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
   
    <PackageId>XDoTool</PackageId>
    <Version>1.0.1</Version>
    <Authors>Ivan Chensky</Authors>
    <Product>XDoTool</Product>
    <Copyright>Copyright (c) Ivan Chensky 2025</Copyright>
    <PackageProjectUrl>https://github.com/ichensky/xdotool</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ichensky/xdotool</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>X11 xdotool</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Description>
    C# wrapper over `xdotool` - command-line X11 automation tool    
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
    <None Include="../../LICENSE" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
